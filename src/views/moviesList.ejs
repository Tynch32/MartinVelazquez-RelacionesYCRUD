<!DOCTYPE html>
<html lang="en">

<%-include('./partials/head.ejs',{viewTitle: "Listado de Películas" })%>

    <body>
        <figure>
            <a href="/"><img src="/img/logo-DH.png" alt="Logo Digital House"></a>
        </figure>
        <h1>LISTADO DE PELÍCULAS</h1>
        <div class="moviesList_botones">
            <a href="/movies/add">
            <button type="button" class="btn btn-dark">
                Agregar una Pelicula <i class="fa-solid fa-film"></i>
            </button>
            </a>
            <a href="/">
            <button type="button" class="btn btn-secondary">
                Volver Al Inicio <i class="fa-solid fa-arrow-right-to-bracket"></i>
            </button>
            </a>
        </div>
        <div class="card">
            <div id="movieList_listTitle" class="card-header">
              <div class="moviesList_titulo_info">
                <div>Listado De Películas</div>
                <div>Información De La Película</div>
              </div>
            </div>          
            <ul class="list-group list-group-flush">
            <% for( let i=0; i < movies.length; i++ ) { %>
                    <a href="/movies/detail/<%= movies[i].id %>" class="list-group-item list-group-item-action">
                        <div class="moviesList_Items">
                            <div><%= movies[i].title %></div> <i class="fa-solid fa-circle-info"></i>
                        </div>
                    </a>
            <% } %>
            </ul>
        </div>
        <div class="button_go_toTop">
            <a href="">
                <button type="button" class="btn btn-secondary">
                    Volver Arriba <i class="fa-solid fa-arrow-up"></i>
                </button>
            </a>
        </div>
    </body>

</html>